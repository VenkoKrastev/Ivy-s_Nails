@using IvysNails.Core.Models.ViewModels.Product
@model ProductViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Product Details</h2>

<div>
    <h4>Name: @Html.DisplayFor(model => model.Name)</h4>
    <h4>Image:</h4>
    <img src="@Model.ImageUrl" alt="Product Image" style="max-width: 250px; max-height: 250px;" />
    <h4>Price: @Html.DisplayFor(model => model.Price)</h4>
    <h4>Details: @Html.DisplayFor(model => model.Details)</h4>
    <h4>Quantity: @Html.DisplayFor(model => model.StockQuantity)</h4>
    
</div>

<h2>@Model.Name</h2>
<img src="@Model.ImageUrl" alt="Product Image" style="max-width: 300px; max-height: 300px;" />
<p>Цена: @Model.Price лева</p>
<p>@Model.Details</p>

<button class="btn btn-info" id="show-details">Детайли</button>
<button class="btn btn-success" id="add-to-cart">Добави в количката</button>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
