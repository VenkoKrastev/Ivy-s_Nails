@model IvysNails.Infrastructure.Data.Models.Product

@{
    ViewBag.Title = "Details";
}

<h2>Product Details</h2>

<div>
    <h4>Name: @Html.DisplayFor(model => model.Name)</h4>
    <h4>Image:</h4>
    <img src="@Model.ImageUrl" alt="Product Image" style="max-width: 300px; max-height: 300px;" />
    <h4>Price: @Html.DisplayFor(model => model.Price)</h4>
    <h4>Details: @Html.DisplayFor(model => model.Details)</h4>
    <h4>Quantity: @Html.DisplayFor(model => model.StockQuantity)</h4>
    
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
